<div class="content">
  <div class="col-md-12">
    <div class="card card-plain">

      <div class="page-header">
        <%= link_to new_event_path, :class => 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-plus"></span>
          New Class
        <% end %>
        <h1>Classes</h1>
      </div>
      <div class="content table-responsive table-full-width">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Location</th>
              <th>Date</th>
              <th>Start Time</th>
              <th>End Time</th>
              <th>Age Group</th>
              <th>Activity</th>
              <th>Description</th>
              <th>Open Spots</th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td>
                  <%= event.title %>
                </td>
                <td>
                  <%= Location.find(event.location_id).street1 %>
                </td>
                <td>
                  <%= event.date.strftime('%d/%m/%Y') %>
                </td>
                <td>
                  <%= event.start_time %>
                </td>
                <td>
                  <%= event.end_time %>
                </td>
                <td>
                  <%= event.ages_group %>
                </td>
                <td>
                  <%= event.activity %>
                </td>
                <td>
                  <%= event.description %>
                </td>
                <td>
                  <%= event.open_spots %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_event_path(event) %>
                </td>
                <td>
                  <%= link_to 'Remove', event, :data => { confirm: 'Are you sure?' }, :method => :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
