<div class="content">
  <div class="container">
    <div class="page-header">
      <%= link_to events_path, :class => 'btn btn-default' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Back
      <% end %>
      <%= link_to edit_event_path(@event), :class => 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Edit
      <% end %>
      <h1>Event Info</h1>
    </div>
    <dl class="dl-horizontal">
      <dt>Location:</dt>
      <dd>
        <%= @event.location_id %>
      </dd>
      <dt>Start time:</dt>
      <dd>
        <%= @event.start_time %>
      </dd>
      <dt>End time:</dt>
      <dd>
        <%= @event.end_time %>
      </dd>
      <dt>Date:</dt>
      <dd>
        <%= @event.date.strftime('%d/%m/%Y') %>
      </dd>
      <dt>Ages group:</dt>
      <dd>
        <%= @event.ages_group %>
      </dd>
      <dt>Activity:</dt>
      <dd>
        <%= @event.activity %>
      </dd>
      <dt>Title:</dt>
      <dd>
        <%= @event.title %>
      </dd>
      <dt>Description:</dt>
      <dd>
        <%= @event.description %>
      </dd>
      <dt>Open spots:</dt>
      <dd>
        <%= @event.open_spots %>
      </dd>
    </dl>
  </div>
</div>
