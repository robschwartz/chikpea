<div class="container">
  <div class="page-header">
    <%= link_to new_location_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New location
    <% end %>
    <h1>Locations</h1>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Location</th>
          <th>Start time</th>
          <th>End time</th>
          <th>Date</th>
          <th>Ages group</th>
        </tr>
      </thead>
      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td>
              <%= location.location_id %>
            </td>
            <td>
              <%= location.start_time %>
            </td>
            <td>
              <%= location.end_time %>
            </td>
            <td>
              <%= location.date %>
            </td>
            <td>
              <%= location.ages_group %>
            </td>
            <td>
              <%= link_to 'Show', location %>
            </td>
            <td>
              <%= link_to 'Edit', edit_location_path(location) %>
            </td>
            <td>
              <%= link_to 'Destroy', location, :data => { confirm: 'Are you sure?' }, :method => :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
