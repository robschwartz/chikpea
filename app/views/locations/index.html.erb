<div class="container">
  <div class="page-header">
    <%= link_to new_location_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New location
    <% end %>
    <h1>Locations</h1>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Street</th>
          <th>Province</th>
          <th>City</th>
          <th>Neighborhood</th>
          <th>Post Code</th>
          <th>Phone</th>
          <th>Totl Bookings</th>
        </tr>
      </thead>
      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><% if location.primary_location %> <i class="pe-7s-star"></i> <% end%></td>
            <td>
              <%= location.street1 %> <%= location.street2 %>
            </td>
            <td>
              <%= location.province %>
            </td>
            <td>
              <%= location.city %>
            </td>
            <td>
              <%= location.neighborhood %>
            </td>
            <td>
              <%= location.postcode %>
            </td>
            <td>
              <%= location.phone %>
            </td>
            <td>
              <%= location.total_bookings %>
            </td>
            <td>
              <%= link_to 'Show', location %>
            </td>
            <td>
              <%= link_to 'Edit', edit_location_path(location) %>
            </td>
            <td>
              <%= link_to 'Destroy', location, :data => { confirm: 'Are you sure?' }, :method => :delete %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
